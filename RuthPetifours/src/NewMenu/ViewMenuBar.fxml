			<MenuItem fx:id="itemStock" text="Customers" />
		</Menu>
		<Menu text="Reports">
			<MenuItem fx:id="itemOffer" text="Orders" />
		</Menu>
		<Menu text="Settings">
			<MenuItem fx:id="itemProperties" text="Change language" />
